{
  "name": "@grunnverk/audio-tools",
  "version": "1.5.4",
  "description": "Audio recording tools for voice-driven development workflows",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "guide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/audio-tools.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "rm -rf coverage && vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "audio",
    "recording",
    "voice",
    "transcription",
    "development",
    "workflow"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@grunnverk/ai-service": "^1.5.3",
    "@theunwalked/unplayable": "^0.0.28"
  },
  "peerDependencies": {
    "@grunnverk/shared": "^1.5.4",
    "winston": "^3.17.0"
  },
  "peerDependenciesMeta": {
    "@grunnverk/shared": {
      "optional": true
    },
    "winston": {
      "optional": true
    }
  },
  "devDependencies": {
    "@grunnverk/shared": "^1.5.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.10.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "0.27.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13",
    "winston": "^3.17.0"
  },
  "overrides": {
    "lodash": "^4.17.23"
  }
}
